generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  password      String?
  image         String?

  accounts      Account[]
  sessions      Session[]
  coffees       Coffee[]
  roastery      Roastery[]
  grinders      Grinder[]
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum RoastLevel {
  LIGHT
  MEDIUM
  MEDIUM_DARK
  DARK
}

model Coffee {
  id              String @id @default(cuid())
  userId          String
  roastery        String
  country         String
  name            String
  roast_level     RoastLevel
  roast_date      DateTime?
  weight          Int
  price           Int? 
  flavor_profile  String[]

  user User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  roasteryRef Roastery @relation(fields: [roastery], references: [id])
}

model Roastery {
  id        String   @id @default(cuid())
  name      String
  address   String?   // optional
  city      String?   // optional
  country   String
  userId    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  coffees Coffee[]
}

enum GrinderType {
  MANUAL
  AUTOMATIC
}

model Grinder {
  id        String      @id @default(cuid())
  name      String
  type      GrinderType
  details   String?

  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Future relation:
  // brews Brew[]
}
